{
  "pipedrive": {
    "meta": {
      "organization": {
        "apiName": "organizations",
        "idProperty": "id"
      },
      "person": {
        "apiName": "persons",
        "idProperty": "id"
      },
      "deal": {
        "apiName": "deals",
        "idProperty": "id"
      },
      "activity": {
        "apiName": "activities",
        "idProperty": "id"
      }
    },
    "defaultExport": {
      "mappings": {
        "person": {
          "name": "{{ firstName }} {{ lastName }}",
          "phone": [
            {
              "label": "work",
              "value": "{{ phone }}",
              "primary": true
            },
            {
              "label": "mobile",
              "value": "{{ mobile }}",
              "primary": false
            },
            {
              "label": "other",
              "value": "{{ fax }}",
              "primary": false
            }
          ],
          "email": [
            {
              "label": "",
              "value": "{{ email }}",
              "primary": true
            }
          ]
        },
        "organization": {
          "name": "{{ organization }}",
          "address": "{{ street }} {{ zip }} {{ city }} {{ state }} {{ country }}"
        },
        "deal": {
          "title": "{{ deal_title }}",
          "value": "{{ deal_value }}",
          "currency": "{{ deal_currency }}",
          "stage_id": "{{ deal_stage }}"
        },
        "activity": {},
        "note": {
          "note": "{{ note }}"
        }
      },
      "workflows": {
        "default": [
          {
            "entity": "organization"
          },
          {
            "entity": "person",
            "dependsOn": [
              {
                "field": "org_id",
                "entity": "organization"
              }
            ]
          },
          {
            "entity": "deal",
            "dependsOn": [
              {
                "field": "org_id",
                "entity": "organization"
              },
              {
                "field": "person_id",
                "entity": "person"
              }
            ]
          },
          {
            "entity": "activity",
            "dependsOn": [
              {
                "field": "org_id",
                "entity": "organization"
              },
              {
                "field": "person_id",
                "entity": "person"
              },
              {
                "field": "deal_id",
                "entity": "deal"
              }
            ]
          },
          {
            "entity": "attachments",
            "config": {
              "bcImage": {
                "entities": [
                  "person"
                ],
                "name": "Business card front"
              },
              "bcImageBackside": {
                "entities": [
                  "person"
                ],
                "name": "Business card back"
              },
              "image": {
                "entities": [
                  "person"
                ],
                "name": "Profile image"
              },
              "drawing": {
                "entities": [
                  "person"
                ],
                "name": "Drawing"
              },
              "attachments": {
                "entities": [
                  "person"
                ],
                "name": {
                  "*": "Attachment (${i})",
                  "PDF": "Attachment (${i})",
                  "SIGNATURE": "{{ visitreport.title || '' }} - {{ firstName || '' }} {{ lastName || '' }} Signatur"
                }
              },
              "visitreport_pdf": {
                "entities": [
                  "person"
                ],
                "name": "VisitReport"
              },
              "note": {
                "entities": [
                  "deal",
                  "person"
                ],
                "name": "Note"
              }
            }
          }
        ]
      },
      "components": {
        "default": [
          {
            "type": "person",
            "duplicateCheckName": "contact",
            "label": {
              "en": "Person",
              "de": "Person"
            },
            "fields": {},
            "search": {
              "ids": [
                "name",
                "email"
              ]
            },
            "mainTemplate": "{{ name }}",
            "detailsTemplate": "{{ org_name }}"
          },
          {
            "type": "organization",
            "duplicateCheckName": "account",
            "label": {
              "en": "Organization",
              "de": "Organisation"
            },
            "fields": {},
            "search": {
              "ids": [
                "name"
              ]
            },
            "mainTemplate": "{{ name }}",
            "detailsTemplate": "{{ address_postal_code ? address_postal_code + ' - ' : '' }} {{ address_locality }}"
          },
          {
            "type": "deal",
            "label": {
              "en": "Deal",
              "de": "Geschäft"
            },
            "fields": {},
            "search": {
              "ids": [
                "title"
              ]
            },
            "mainTemplate": "{{ title }}",
            "detailsTemplate": "{{ person_name ? person_name + ' - ' : '' }} {{ org_name }}"
          },
          {
            "type": "activity",
            "label": {
              "en": "Activity",
              "de": "Activity"
            },
            "fields": {},
            "search": {
              "ids": [
                "subject",
                "type"
              ]
            },
            "mainTemplate": "{{ subject }}",
            "detailsTemplate": "{{ type }}"
          }
        ]
      },
      "config": {
        "default": {
          "open": "deal"
        }
      }
    },
    "visitreport": {
      "mappings": {
        "*": {
          "mappings": {
            "person": {
              "name": "{{ firstName }} {{ lastName }}",
              "org_id": "{{ org_id }}",
              "phone": [
                {
                  "label": "Phone",
                  "value": "{{ phone }}",
                  "primary": true
                },
                {
                  "label": "Mobile",
                  "value": "{{ mobile }}",
                  "primary": false
                },
                {
                  "label": "Fax",
                  "value": "{{ fax }}",
                  "primary": false
                }
              ],
              "email": [
                {
                  "label": "",
                  "value": "{{ email }}",
                  "primary": true
                }
              ]
            },
            "organization": {
              "name": "{{ organization }}",
              "address": "{{ street }} {{ zip }} {{ city }} {{ state }} {{ country }}"
            },
            "deal": {
              "title": "{{ deal_title }}",
              "value": "{{ deal_value }}",
              "currency": "{{ deal_currency }}",
              "stage_id": "{{ deal_stage }}",
              "person_id": "{{ person_id }}",
              "org_id": "{{ org_id }}"
            },
            "activity": {},
            "note": {
              "note": "{{ execute(getVisitreportNote) }}"
            }
          },
          "activity": {}
        }
      },
      "workflows": {
        "*": {
          "default": [
            {
              "entity": "organization"
            },
            {
              "entity": "person",
              "dependsOn": [
                {
                  "field": "org_id",
                  "entity": "organization"
                }
              ]
            },
            {
              "entity": "deal",
              "dependsOn": [
                {
                  "field": "org_id",
                  "entity": "organization"
                },
                {
                  "field": "person_id",
                  "entity": "person"
                }
              ]
            },
            {
              "entity": "activity",
              "dependsOn": [
                {
                  "field": "org_id",
                  "entity": "organization"
                },
                {
                  "field": "person_id",
                  "entity": "person"
                },
                {
                  "field": "deal_id",
                  "entity": "deal"
                }
              ]
            },
            {
              "entity": "attachments",
              "config": {
                "bcImage": {
                  "entities": [
                    "person"
                  ],
                  "name": "Business card front"
                },
                "bcImageBackside": {
                  "entities": [
                    "person"
                  ],
                  "name": "Business card back"
                },
                "image": {
                  "entities": [
                    "person"
                  ],
                  "name": "Profile image"
                },
                "drawing": {
                  "entities": [
                    "person"
                  ],
                  "name": "Drawing"
                },
                "attachments": {
                  "entities": [
                    "person"
                  ],
                  "name": {
                    "*": "Attachment (${i})",
                    "PDF": "Attachment (${i})",
                    "SIGNATURE": "{{ visitreport.title || '' }} - {{ firstName || '' }} {{ lastName || '' }} Signatur"
                  }
                },
                "visitreport_pdf": {
                  "entities": [
                    "contact"
                  ],
                  "name": "VisitReport"
                },
                "note": {
                  "entities": [
                    "deal",
                    "person"
                  ],
                  "name": "Note"
                }
              }
            }
          ]
        }
      },
      "components": {
        "*": {
          "default": [
            {
              "type": "person",
              "duplicateCheckName": "contact",
              "label": {
                "de": "Person",
                "en": "Person"
              },
              "fields": {},
              "search": {
                "ids": [
                  "name",
                  "email"
                ]
              },
              "mainTemplate": "{{ name }}",
              "detailsTemplate": "{{ org_name }}"
            },
            {
              "type": "organization",
              "duplicateCheckName": "account",
              "label": {
                "de": "Organisation",
                "en": "Organization"
              },
              "fields": {},
              "search": {
                "ids": [
                  "name"
                ]
              },
              "mainTemplate": "{{ name }}",
              "detailsTemplate": "{{ address_postal_code ? address_postal_code + ' - ' : '' }} {{ address_locality }}"
            },
            {
              "type": "deal",
              "label": {
                "en": "Deal",
                "de": "Geschäft"
              },
              "fields": {},
              "search": {
                "ids": [
                  "title"
                ]
              },
              "mainTemplate": "{{ title }}",
              "detailsTemplate": "{{ person_name ? person_name + ' - ' : '' }} {{ org_name }}"
            },
            {
              "type": "activity",
              "label": {
                "en": "Activity",
                "de": "Activity"
              },
              "fields": {},
              "search": {
                "ids": [
                  "subject",
                  "type"
                ]
              },
              "mainTemplate": "{{ subject }}",
              "detailsTemplate": "{{ type }}"
            }
          ]
        }
      },
      "config": {
        "*": {
          "default": {
            "open": "deal"
          }
        }
      }
    },
    "code": {
      "functions": {
        "getVisitreportNote": [
          "var note = address.note ? (address.note + '\\n\\n') : '';",
          "if (address.visitreport && address.visitreport.result) {",
          "  note += 'VisitReport\\n\\n';",
          "  var result = address.visitreport.result;",
          "  for (var key in result) {",
          "    note += result[key].question + ' = ' + result[key].text + '\n';",
          "  }",
          "}",
          "return note.replace(/\"/g,'');"
        ]
      }
    }
  }
}