{
  "dynamics": {
    "meta": {
      "lead": {
        "apiName": "Lead",
        "idProperty": "LeadId",
        "logicalName": "lead"
      },
      "contact": {
        "apiName": "Contact",
        "idProperty": "ContactId",
        "logicalName": "contact"
      },
      "account": {
        "apiName": "Account",
        "idProperty": "AccountId",
        "logicalName": "account"
      },
      "appointment": {
        "apiName": "Appointment",
        "idProperty": "ActivityId",
        "logicalName": "appointment"
      },
      "task": {
        "apiName": "Task",
        "idProperty": "ActivityId",
        "logicalName": "task"
      }
    },
    "defaultExport": {
      "mappings": {
        "lead": {
          "Subject": "{{ topic }}",
          "FirstName": "{{ firstName }}",
          "LastName": "{{ lastName }}",
          "Salutation": "{{ gender == 0 ? ('Herr') : (gender == 1 ? ('Frau') : '') }}",
          "JobTitle": "{{ position }}",
          "CompanyName": "{{ organization }}",
          "WebSiteUrl": "{{ website }}",
          "EMailAddress1": "{{ email }}",
          "Telephone1": "{{ phone }}",
          "MobilePhone": "{{ mobile }}",
          "Fax": "{{ fax }}",
          "Address1_Line1": "{{ street }}",
          "Address1_City": "{{ city }}",
          "Address1_PostalCode": "{{ zip }}",
          "Address1_Country": "{{ country }}",
          "Address1_StateOrProvince": "{{ state }}"
        },
        "contact": {
          "FirstName": "{{ firstName }}",
          "LastName": "{{ lastName }}",
          "Salutation": "{{ gender == 0 ? ('Herr') : (gender == 1 ? ('Frau') : '') }}",
          "JobTitle": "{{ position }}",
          "MobilePhone": "{{ mobile }}",
          "Fax": "{{ fax }}",
          "Telephone1": "{{ phone }}",
          "WebSiteUrl": "{{ website }}",
          "EMailAddress1": "{{ email }}",
          "Address1_Line1": "{{ street }}",
          "Address1_City": "{{ city }}",
          "Address1_PostalCode": "{{ zip }}",
          "Address1_Country": "{{ country }}",
          "Address1_StateOrProvince": "{{ state }}",
          "GenderCode": {
            "Value": "{{ execute(genderMapping) }}"
          }
        },
        "account": {
          "Name": "{{ organization }}",
          "WebSiteURL": "{{ website }}",
          "Telephone1": "{{ phone }}",
          "Fax": "{{ fax }}",
          "Address1_Line1": "{{ street }}",
          "Address1_PostalCode": "{{ zip }}",
          "Address1_City": "{{ city }}",
          "Address1_Country": "{{ country }}",
          "Address1_StateOrProvince": "{{ state }}"
        }
      },
      "workflows": {
        "lead": [
          {
            "entity": "lead"
          },
          {
            "entity": "attachments",
            "config": {
              "drawing": {
                "entities": [
                  "lead"
                ],
                "name": "Drawing"
              },
              "bcImage": {
                "entities": [
                  "lead"
                ],
                "name": "Business card front"
              },
              "bcImageBackside": {
                "entities": [
                  "lead"
                ],
                "name": "Business card back"
              },
              "attachments": {
                "entities": [
                  "lead"
                ],
                "name": {
                  "*": "Attachment (${i})",
                  "PDF": "Attachment (${i})",
                  "SIGNATURE": "{{ visitreport.title || '' }} - {{ firstName || '' }} {{ lastName || '' }} Signatur"
                }
              },
              "note": {
                "entities": [
                  "lead"
                ],
                "name": "snapADDY Note"
              }
            }
          }
        ],
        "contact_account": [
          {
            "entity": "account"
          },
          {
            "entity": "contact",
            "dependsOn": [
              {
                "field": "ParentCustomerId",
                "entity": "account"
              }
            ]
          },
          {
            "entity": "attachments",
            "config": {
              "drawing": {
                "entities": [
                  "contact"
                ],
                "name": "Drawing"
              },
              "bcImage": {
                "entities": [
                  "contact"
                ],
                "name": "Business card front"
              },
              "bcImageBackside": {
                "entities": [
                  "contact"
                ],
                "name": "Business card back"
              },
              "attachments": {
                "entities": [
                  "contact"
                ],
                "name": {
                  "*": "Attachment (${i})",
                  "PDF": "Attachment (${i})",
                  "SIGNATURE": "{{ visitreport.title || '' }} - {{ firstName || '' }} {{ lastName || '' }} Signatur"
                }
              },
              "note": {
                "entities": [
                  "contact"
                ],
                "name": "snapADDY Note"
              }
            }
          }
        ]
      },
      "components": {
        "lead": [],
        "contact_account": []
      }
    },
    "visitreport": {
      "mappings": {
        "*": {
          "lead": {
            "Salutation": "{{ gender == 0 ? ('Herr') : (gender == 1 ? ('Frau') : '') }}",
            "Subject": "{{ topic }}",
            "FirstName": "{{ firstName }}",
            "LastName": "{{ lastName }}",
            "JobTitle": "{{ position }}",
            "CompanyName": "{{ organization }}",
            "WebSiteUrl": "{{ website }}",
            "EMailAddress1": "{{ email }}",
            "Telephone1": "{{ phone }}",
            "MobilePhone": "{{ mobile }}",
            "Fax": "{{ fax }}",
            "Address1_Line1": "{{ street }}",
            "Address1_City": "{{ city }}",
            "Address1_PostalCode": "{{ zip }}",
            "Address1_Country": "{{ country }}",
            "Address1_StateOrProvince": "{{ state }}",
            "CampaignId": {
              "Id": "{{ visitreport.campaignId }}",
              "LogicalName": "campaign"
            }
          },
          "contact": {
            "Salutation": "{{ gender == 0 ? ('Herr') : (gender == 1 ? ('Frau') : '') }}",
            "FirstName": "{{ firstName }}",
            "LastName": "{{ lastName }}",
            "JobTitle": "{{ position }}",
            "MobilePhone": "{{ mobile }}",
            "Fax": "{{ fax }}",
            "Telephone1": "{{ phone }}",
            "WebSiteUrl": "{{ website }}",
            "EMailAddress1": "{{ email }}",
            "Address1_Line1": "{{ street }}",
            "Address1_City": "{{ city }}",
            "Address1_PostalCode": "{{ zip }}",
            "Address1_Country": "{{ country }}",
            "Address1_StateOrProvince": "{{ state }}",
            "GenderCode": {
              "Value": "{{ execute(genderMapping) }}"
            }
          },
          "account": {
            "Name": "{{ organization }}",
            "WebSiteURL": "{{ website }}",
            "Telephone1": "{{ phone }}",
            "Fax": "{{ fax }}",
            "Address1_Line1": "{{ street }}",
            "Address1_PostalCode": "{{ zip }}",
            "Address1_City": "{{ city }}",
            "Address1_Country": "{{ country }}",
            "Address1_StateOrProvince": "{{ state }}"
          },
          "note": {
            "note": "{{ execute(getVisitReportNote) }}"
          }
        }
      },
      "workflows": {
        "*": {
          "lead": [
            {
              "entity": "lead"
            },
            {
              "entity": "attachments",
              "config": {
                "drawing": {
                  "entities": [
                    "lead"
                  ],
                  "name": "Drawing"
                },
                "bcImage": {
                  "entities": [
                    "lead"
                  ],
                  "name": "Business card front"
                },
                "bcImageBackside": {
                  "entities": [
                    "lead"
                  ],
                  "name": "Business card back"
                },
                "attachments": {
                  "entities": [
                    "lead"
                  ],
                  "name": {
                    "*": "Attachment (${i})",
                    "PDF": "Attachment (${i})",
                    "SIGNATURE": "{{ visitreport.title || '' }} - {{ firstName || '' }} {{ lastName || '' }} Signatur"
                  }
                },
                "visitreport_pdf": {
                  "entities": [
                    "lead"
                  ],
                  "name": "VisitReport"
                },
                "note": {
                  "entities": [
                    "lead"
                  ],
                  "name": "snapADDY Note"
                }
              }
            }
          ],
          "contact_account": [
            {
              "entity": "account"
            },
            {
              "entity": "contact",
              "dependsOn": [
                {
                  "field": "ParentCustomerId",
                  "entity": "account"
                }
              ]
            },
            {
              "entity": "attachments",
              "config": {
                "drawing": {
                  "entities": [
                    "contact"
                  ],
                  "name": "Drawing"
                },
                "bcImage": {
                  "entities": [
                    "contact"
                  ],
                  "name": "Business card front"
                },
                "bcImageBackside": {
                  "entities": [
                    "contact"
                  ],
                  "name": "Business card back"
                },
                "attachments": {
                  "entities": [
                    "contact"
                  ],
                  "name": {
                    "*": "Attachment (${i})",
                    "PDF": "Attachment (${i})",
                    "SIGNATURE": "{{ visitreport.title || '' }} - {{ firstName || '' }} {{ lastName || '' }} Signatur"
                  }
                },
                "visitreport_pdf": {
                  "entities": [
                    "contact"
                  ],
                  "name": "VisitReport"
                },
                "note": {
                  "entities": [
                    "contact"
                  ],
                  "name": "snapADDY Note"
                }
              }
            }
          ]
        }
      },
      "components": {
        "*": {
          "lead": [],
          "contact_account": []
        }
      }
    },
    "code": {
      "functions": {
        "genderMapping": [
          "if (address.gender === 0) { return 1; }",
          "if (address.gender === 1) { return 2; }",
          "return null;                           "
        ],
        "getVisitReportNote": [
          "var note = address.note ? (address.note + '\\n\\n') : '';",
          "if (address.visitreport && address.visitreport.result) {",
          "  note += 'VisitReport\\n\\n';",
          "  var result = address.visitreport.result;",
          "  for (var key in result) {",
          "    note += result[key].question + ' = ' + (result[key].text || '-') + '\n';",
          "  }",
          "}",
          "return note.replace(/\"/g,'');"
        ]
      }
    }
  }
}